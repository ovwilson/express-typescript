{
  "name": "express-typescript",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run serve",
    "build": "npm run build-ts",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "test-build": "tsc test/*.ts --sourceMap",
    "test": "mocha -r ts-node/register test/*.ts --watch --watch-extensions ts",
    "serve": "concurrently \"npm run watch-ts\" \"nodemon dist/server\""
  },
  "dependencies": {
    "async": "^2.5.0",
    "body-parser": "^1.17.2",
    "chai": "^4.1.1",
    "concurrently": "^3.5.0",
    "connect-mongo": "^1.3.2",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "express-flash": "^0.0.2",
    "express-session": "^1.15.5",
    "mocha": "^3.5.0",
    "mongoose": "^4.11.6",
    "morgan": "^1.8.2",
    "pug": "^2.0.0-rc.3",
    "request": "^2.81.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.40",
    "@types/body-parser": "^1.16.4",
    "@types/chai": "^4.0.3",
    "@types/chai-http": "^3.0.2",
    "@types/dotenv": "^4.0.0",
    "@types/express": "^4.0.36",
    "@types/express-session": "^1.15.2",
    "@types/mocha": "^2.2.41",
    "@types/mongodb": "^2.2.9",
    "@types/mongoose": "^4.7.19",
    "@types/morgan": "^1.7.32",
    "@types/node": "^8.0.20",
    "@types/request": "^2.0.0",
    "chai-http": "^3.0.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "shelljs": "^0.7.8",
    "ts-node": "^3.3.0",
    "tslint": "^5.6.0",
    "typescript": "^2.4.2"
  }
}
